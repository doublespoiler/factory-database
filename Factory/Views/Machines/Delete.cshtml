@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Are you sure you want to delete this machine?</h2>
<p>This will also delete all links from this Machine to their Mechanics</p>


@Html.Label("Machine Name: ") @Html.DisplayFor(model => model.MachineName)
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-primary"/>
}
@Html.ActionLink("Cancel", "Details", null, new {id = Model.MachineId}, new { @class = "btn btn-primary"})