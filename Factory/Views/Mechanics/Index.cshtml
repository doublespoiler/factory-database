@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Mechanic>;

<h1>Mechanic</h1>

@if (@Model.Count == 0)
{
  <h3>No mechanics have been added yet!</h3>
} 

@foreach (Mechanic mechanic in Model)
{
  <li>@Html.ActionLink($"{mechanic.MechanicName}", "Details", new { id = mechanic.MechanicId }) </li>
}

@Html.ActionLink("New Mechanic", "Create", null, null, new { @class = "btn btn-primary"})
