@{
  Layout = "_Layout";
}

@model Factory.Models.Mechanic

<h2>Are you sure you want to delete this Mechanic?</h2>
<p>This will also delete all links from this Mechanic to their Machines</p>

@Html.Display("Mechanic Name"): @Html.DisplayFor(model => model.MechanicName)
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-primary"/>
}

@Html.ActionLink("Cancel", "Details", null, new { id = Model.MechanicId }, new { @class = "btn btn-primary"})
