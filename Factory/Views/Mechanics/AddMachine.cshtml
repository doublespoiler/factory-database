@{
  Layout = "_Layout";
}

@model Factory.Models.Mechanic

<h2>Add a Machine</h2>

<h4>Add a Machine for this Mechanic: @Html.DisplayFor(model => model.MechanicName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MechanicId)

  @Html.Label("Select Machine")
  @Html.DropDownList( "MachineId" )

  <input type="submit" value="Save" />
}

@Html.ActionLink("Back to list", "Index", null, null, new { @class = "btn btn-primary"})
